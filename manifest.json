{
  "name": "@deskpro-apps/teamviewer",
  "title": "TeamViewer",
  "description": "TeamViewer app",
  "version": "1.0.1",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{
    "target": "ticket_sidebar",
    "entrypoint": "index.html",
    "options": {
      "actions": {
        "linkTicket": {
          "type": "ticket_addition",
          "title": "TeamViewer Session",
          "description": "Create a TeamViewer session"
        }
      }
    }
  }],
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    },
    "client_secret": {
      "title": "Client secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://login.teamviewer.com/oauth2/authorize",
      "methods": ["GET"],
      "timeout": 10
    }, {
      "url": "https://example.com/.*",
      "methods": ["GET", "POST"],
      "timeout": 10
    }]
  }
}
